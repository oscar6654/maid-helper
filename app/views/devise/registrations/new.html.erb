<body>
  <div class="section"></div>
  <main>
    <center>
      <div class="section"></div>
      <%= devise_error_messages! %>
      <%= link_to user_facebook_omniauth_authorize_path do %>
        <button class="loginBtn loginBtn--facebook">
          Login with Facebook
        </button>
      <%end%>
      <%= link_to user_google_oauth2_omniauth_authorize_path do %>
        <button class="loginBtn loginBtn--google">
          Login with Google
        </button>
      <%end%>
      <!-- <h5 class="indigo-text">Please, login into your account</h5> -->
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="padding: 32px 48px 15px 48px; border: 1px solid #EEE;">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <!-- <div class='row'> -->
              <div class='col s12'>
                <h4 class="indigo-text">Create Account</h4>
              </div>
            <!-- </div> -->


            <%= f.radio_button :job_type, 'Employer' %>
            <%= f.label :job_type, 'Employer', :value => 'Employer' %>
            <%= f.radio_button :job_type, 'Employee' %>
            <%= f.label :job_type, 'Employee', :value => 'Employee' %>

            <!-- <div class='row'> -->
              <div class='input-field col s12'>
                <%= f.text_field :first_name, type: "text", class: "validate", :required => true %>
                <label for="first_name">First Name</label>
              </div>
            <!-- </div> -->

            <!-- <div class='row'> -->
              <div class='input-field col s12'>
                <%= f.text_field :last_name, type: "text", class: "validate", :required => true %>
                <label for="last_name">Last Name</label>
              </div>
            <!-- </div> -->
              <div class='input-field col s12'>
                <%= f.text_field :username, type: "text", class: "validate", :required => true %>
                <label for="username">Username</label>
              </div>
            <!-- <div class='row'> -->
              <div class='input-field col s12'>
                <%= f.email_field :email, id: "email", type: "text", class: "validate", :required => true %>
                <label for="email">Email</label>
              </div>
            <!-- </div> -->

            <!-- <div class='row'> -->
              <div class='input-field col s12'>
                <%= f.password_field :password, autocomplete: "off",id: "password", :required => true %>
                <label for="password", class: "active">Password</label>
              </div>
            <!-- </div> -->
            <!-- <div class='row'> -->
              <div class='input-field col s12'>
                <%= f.password_field :password_confirmation, autocomplete: "off", :required => true%>
                <label for="password", class: "active">Confirm Password</label>
              </div>
            <!-- </div> -->
            <br />
            <center>
              <div class='row'>
                <%= f.submit "Create Account" , class: "col s12 btn btn-large waves-effect indigo" %>
              </div>
            </center>
          <%end%>
        </div>
      </div>
      <br/>
      <%=link_to "Log in", new_user_session_path %>
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>

